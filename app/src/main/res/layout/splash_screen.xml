<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35C5C0"
    tools:context=".SplashScreen">


    <ImageView
        android:id="@+id/splashmic"
        android:layout_width="400dp"
        android:layout_height="450dp"
        android:layout_centerInParent="true"
        android:background="@drawable/white_mic" />

    <TextView
        android:id="@+id/vaultertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splashmic"
        android:layout_centerInParent="true"
        android:text="@string/vaulter_voice_string"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bankingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vaultertext"
        android:layout_centerInParent="true"
        android:text="@string/voice_banking_app_string"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>